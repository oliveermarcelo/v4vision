# ===========================================
# V4Vision - Environment Variables
# ===========================================
# TODAS as variáveis têm prefixo V4VISION_ 
# para não conflitar com outros projetos
# ===========================================

# Porta do Frontend (escolha uma que não esteja em uso)
V4VISION_PORT=8585

# Django Settings
V4VISION_DEBUG=False
V4VISION_SECRET_KEY=sua-chave-secreta-minimo-50-caracteres-mude-isso
V4VISION_ALLOWED_HOSTS=localhost,127.0.0.1,seudominio.com.br

# Database (nomes únicos para não conflitar)
V4VISION_DB_NAME=v4vision_db
V4VISION_DB_USER=v4vision_user
V4VISION_DB_PASSWORD=sua-senha-segura-do-banco

# CORS
V4VISION_CORS_ORIGINS=http://localhost:8585,https://seudominio.com.br
